                                href="@congestionChargePdf">
    		                    <span>Congestion Charge Zone map</span>
    		                    <span class="download-pdf">PDF 612.71</span>
    	                    </a>
    
    	                    <a title="Download the Congestion Charge Zone map in GIF format" class="btn-download-map"
                                href="@congestionChargeGif">
    		                    <span>Congestion Charge Zone map</span>
    		                    <span class="download-image">GIF 325.12</span>
    	                    </a>
                        </div>                    
    		        </div>
	            </div>
            </div>
            </div>
            <!-- Download maps -->
                
          
            
