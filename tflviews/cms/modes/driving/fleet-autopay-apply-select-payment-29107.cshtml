        @{
            dynamic content = new ContentModel();
            
            content.BackButtonText = "Back";
            content.ContinueButtonText = "Continue";
            
            content.PreferredPaymentHeading = "We'll let you know when we're going to take payment.";
            
            content.DirectDebitOnlineManualText = "<p>If you are not the bank/building society account holder, or more than one person is required to authorise debits from this account, you will not be able to authorise a Direct Debit mandate.</p>";
