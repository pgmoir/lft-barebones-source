<div class="main-and-aside r">
  
<div class="login-aside">
                @{
                    Html.RenderAction(
                        "UserLoginBox", 
                        "Account", 
                        new { 
                            Area = "Ruc", 
                            returnUrl = "/modes/driving/account-account-landing-29377"
                        }
                    );
                }
            </div>
      

 
  <div class="main content-container" role="main">
    
      <div class="article-teaser">
        <p>There was a problem processing your card.</p>
        
      </div>
    
    
      
      
           
      

        @{
            dynamic content = new ContentModel();
            content.ErrorTitle = "We are unable to process your card.";
            content.ConfirmationEmailAddressText = "Confirmation email sent to: {0}";
            content.PaymentErrorText = "Your payment has not been processed. Please try again or use a different payment method.";
            content.PaymentDeclinedText = "Your payment has not been processed. Please try again or use a different payment method.";

            Html.RenderAction("CardFailure", "AutoPayApply", new { area = "Ruc", content = content, journeyStartUrl = "/modes/driving/autopay-apply" });
        }
      
 
      
        
          
        
      
    
  </div>
  <div class="aside" role="complementary">

    

        @{
            dynamic userInfoBoxContent = new ContentModel();
            Html.RenderAction("UserInfoBox", "Account", new { Area = "Ruc", content = userInfoBoxContent, logOutUrl = "/modes/driving/congestion-charge" });
        }
        
      

 
    
    
      <div data-set="sidenav-container" class="large">
        
        
        @ModulesHelpers.PrintButton()
      
 
