            //content.ChargeNotAuthorisedErrorMessage = "";

            
            content.VrmRequired = "Enter a Vehicle Registration Mark to continue";
            content.ReceiptNumberRequired = "Enter a receipt number to continue";
            content.StartDateRequired = "Enter a start date to continue";

            Html.RenderAction(
            "FindCharge",
            "ChangeZoneCharge",
            new
            {
                area = "Ruc",
                resultUrl = "/modes/driving/lez-change-a-charge-change-a-charge-26512",
                backUrl = "/modes/driving/low-emission-zone",
                loginUrl = "/modes/driving/login",
                content = content,
                zoneType = ZoneChargeZone.LowEmission
            });
