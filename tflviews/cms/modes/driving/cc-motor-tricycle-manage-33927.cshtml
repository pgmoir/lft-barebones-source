		<!-- 4. motor-tricycle -->
		@{
            dynamic content = new ContentModel();

            content.SingleActiveCountText = "Discount status: Active on 1 vehicle";
            content.ActiveCountTextFormat = "Discount status: Active on {0} vehicles";

            Html.RenderAction("DiscountActiveVehicleCount", "DiscountManage", new {
                    area = "Ruc",
                    discountStyle = ZoneChargeDiscountStyle.MotorTricycle,
                    content = content
                }
            );
        }

        @{
            dynamic vehicleListContent = new ContentModel();
    
            /* Charge labels and messages */
            vehicleListContent.HeadingText = "Motor tricycle discount vehicle(s)";
            vehicleListContent.NonChargeableLabel = "No charge due";
            vehicleListContent.NonChargeableMessage = "Based on the vehicle details entered and information held by the DVLA and TfL today, you don't have to pay the ULEZ charge for this vehicle. This may change - always check to see if you need to pay to drive within the zone.";
