      <h2>Update address</h2>
      
           
      



        
        <!-- 5. provisional-resident-discount -->
        @using TfL.Ruc.Services.ViewModels.Ruc.DiscountApply
        @{
            dynamic content = new ContentModel();
        
            content.UpdateAddressButtonText = "Confirm";
            content.BackButtonText = "Back";
            content.AccountWideAddressText = "<p>To complete your discount application you need to update your address details first.&nbsp;Go to <a href='/modes/driving/account-account-settings-29386'>Account settings</a> and edit your address then restart your residents' discount application from My discounts.</p>";
            content.ContinueButtonText = "Continue";
            content.AddressLinePostcodeText = "Postcode";
            content.APIError = "At the moment we don't know if your address makes you eligible for the discount - please try again later.";
        
            var insideUrl = "/modes/driving/inside-resident-discount-provisional";
            var outsideUrl = "/modes/driving/outside-resident-discount-provisional";
        }
        
        @FormHelpers.FormInfo(content.AccountWideAddressText)
        
        @{
            Html.RenderAction(
                RucDictionary.ZoneChecker.DefaultActionName,
                "ZoneChecker",
                new
                {
                    zoneCheckJourney = ZoneCheckJourney.ResidentDiscountApplyProvisional,
                    zoneChargeType = ZoneChargeType.CongestionCharge,
                    area = "Ruc",
                    findAnotherUrl = "/modes/driving/cc-provisional-resident-check-zone-33363",
                    selectVehicleUrl = "/modes/driving/cc-provisional-resident-select-vehicle-33362",
                    backUrl = "/modes/driving/cc-provisional-resident-before-you-begin-33357",
                    reviewUrl = "/modes/driving/cc-provisional-resident-review-application-33364",
                    content = content,
                    insideCcInsideResUrl = insideUrl,
                    insideCcOutsideResUrl = outsideUrl,
                    outsideCcInsideResUrl = insideUrl,
                    outsideCcOutsideResUrl = outsideUrl,
                    navigationEnabled = true
                }
            );
        }
        @{
            this.ScriptBlock(
            @<script>
                  queue.push(
                    "@Html.ScriptPath("specific/pages/resident-address-zone-checker.min.js")",
                    function () {
                        residentZoneCheck.init();
                    }
                  );
        
            </script>);
        }
        
	  


      
        
          
        
      
    
