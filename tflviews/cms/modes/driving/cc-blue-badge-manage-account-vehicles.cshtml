        @{
            dynamic content = new ContentModel();

            content.VehicleNotInMyListText = "New vehicle";
            content.ContinueButtonText = "Continue";
            content.BackButtonText = "Back";
            content.SortLabel = "Sort";
            content.SearchLabel = "Search";
            content.ApplyFilterLabel = "Apply filter";
            content.ResetFilterLabel = "Reset";
            content.DetailNotFoundMessage = "<p>We do not hold details for this vehicle.</p>";
            content.ExemptAllMessage = "<p>No charges due - this vehicle is either exempt, discounted or not liable for all charges. You can still continue to pay.</p>";
            content.VehicleAlreadyExistsOnThisApplicationErrorText = "<p>This vehicle has already been added to this application. Select another vehicle.</p>";
            content.BasketLimitMessage = "You have reached the maximum number of vehicles for Blue Badge";
            content.NoSelectionErrorMessage = "Select a vehicle to continue";
            content.SelectedVehicleLabel = "Selected vehicles: {0} of {1}";

            var resetVehicle = false;
            if(Request.QueryString.AllKeys.Contains("resetVehicle")){
                resetVehicle = Convert.ToBoolean(Request.QueryString["resetVehicle"]);
            }

            // Back Url parameters
            if(Request.QueryString.AllKeys.Contains("sourceRoutingKey")){
                content.SourceRoutingKey = Request.QueryString["sourceRoutingKey"];
            }        
            
            Html.RenderAction("AccountVehicles", 
                "BlueBadge", 
                new {
                    area = "Ruc",
                    content = content,
                    vrmLookupUrl = "/modes/driving/cc-blue-badge-manage-vrm-lookup?sourceRoutingKey=account-vehicles",
                    resetVehicle  = resetVehicle,
                    discountAction = DiscountAction.Manage,
                    selectVehicleUrl = "/modes/driving/cc-blue-badge-manage-30941",
                    nextUrl = "/modes/driving/cc-blue-badge-manage-30941"
                });
        }
    
 
      
        
          
        
      
    
