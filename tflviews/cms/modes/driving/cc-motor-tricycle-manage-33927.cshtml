            vehicleListContent.PayableHighMessage = "This vehicle does not meet the ULEZ emissions standards. You need to pay the ULEZ charge if you drive within the zone. The zone operates at all times - charging days run from midnight to midnight.";
            vehicleListContent.PayableLowLabel = "Should be paid";
            vehicleListContent.PayableLowMessage = "This vehicle does not meet the ULEZ emissions standards. You need to pay the ULEZ charge if you drive within the zone. The zone operates at all times - charging days run from midnight to midnight.";
            vehicleListContent.ExemptLabel = "Exempt";
            vehicleListContent.ExemptMessage = "Based on the vehicle details entered and information held by the DVLA and TfL today, this vehicle is exempt from this charge. This may change - always check to see if you need to pay to drive within the zone.";
            vehicleListContent.CompliantLabel = "Meets the standard";
            vehicleListContent.CompliantMessage = "This vehicle meets the ULEZ emissions standards. You don't have to pay the charge.";
            vehicleListContent.PayableLabel = "Should be paid";
            vehicleListContent.PayableMessage = "You need to pay the Congestion Charge for this vehicle if you drive within the zone Monday to Friday 07:00-18:00 excluding bank holidays and the period between Christmas Day and New Year's Day.";
            vehicleListContent.ChargeabilityUnknownLabel = "Unknown";
            vehicleListContent.ChargeabilityUnknownMessage = "We don't hold any charge details for this vehicle.";
            vehicleListContent.UnknownVehicleWarningMessage = "We don't have any details for this vehicle at the moment. If you want to add it to a discount application or to Auto Pay you need to add it as a new vehicle.";
    
    
            /* CommonList CMS properties */
            vehicleListContent.ServiceError = "There was a problem - we can't retrieve your vehicles";
    
            /* Composite Vehicle List Summary*/
            vehicleListContent.TotalRecordsLabelTemplate = "{0} Vehicle";
            vehicleListContent.PluralTotalRecordsLabelTemplate = "{0} Vehicles";
            vehicleListContent.DownloadButtonText = "Download list";
    
            /* Composite Vehicle List Panel */
            vehicleListContent.CcLabel = "CC";
            vehicleListContent.UlezLabel = "ULEZ";
            vehicleListContent.DateAddedText = "Date added: ";
            vehicleListContent.ExpiryDateText = "Expiry date: ";
    
            vehicleListContent.RenewDiscountText = "Renew Discount";
            vehicleListContent.RenewUrl = "/modes/driving/cc-motor-tricycle-renew-renew-33800?";
            
            /* Remove Vehicle Modal */
            vehicleListContent.RemoveVehicleModalHeadingText = "Are you sure?";
            vehicleListContent.RemoveVehicleModalMessageText = "This will remove the vehicle from this discount only, but not from Auto Pay.";
            vehicleListContent.RemoveVehicleModalConfirmButtonText = "Remove";
            vehicleListContent.RemoveVehicleModalCancelButtonText = "Keep";
    
            /* Unable to Remove Vehicle Modal */
            vehicleListContent.UnableToRemoveVehicleModalHeadingText = "You can't remove this vehicle";
            vehicleListContent.UnableToRemoveVehicleModalMessageText = "To remove this vehicle from the discount, you first need to remove its scheduled replacement.";
            vehicleListContent.UnableToRemoveVehicleModalConfirmButtonText = "Close";
    
            /* Custom messages */
            vehicleListContent.CustomResultsMessageFormat = "<p>You can have up to 2 vehicles active on this discount at a time. Vehicles are covered by the 100% discount straight away, but it may take up to 24 hours for&nbsp;the new discounted status to appear here.</p>";
    
            /* Add / Apply for vehicle buttons */
            vehicleListContent.AddVehicleButtonText = "Add vehicle to discount";
            vehicleListContent.AccountVehiclesLink = "/modes/driving/cc-blue-badge-manage-account-vehicles";
            vehicleListContent.AddVehicleButtonLabel = "Add vehicle";
            vehicleListContent.NewVehicleLink = "/modes/driving/cc-blue-badge-manage-vrm-lookup?addnew=true";
    
            /* Replacement vehicle button */
            vehicleListContent.FullDiscountLabel = "100% Discount";
            vehicleListContent.FullDiscountMessage = "You have 100 percent discount";

            Html.RenderAction("Index", "CompositeVehicles", new
                {
                    content = vehicleListContent,
                    compositeVehicleServiceStyle = CompositeVehicleServiceStyle.Discount,
                    zoneChargeDiscountStyle = ZoneChargeDiscountStyle.MotorTricycle
                }
            );
        }

        @ModulesHelpers.LinkWithIcon(
            "Add vehicle to discount",
            "add-vehicle",
            "/modes/driving/cc-motor-tricycle-apply-33251?backUrl=/modes/driving/cc-motor-tricycle-manage-33927",
            responsive: true
        )

        @ModulesHelpers.BoxedLink(
            href: "/modes/driving/cc-autopay-manage-view-vehicle-history-30894?Search.ServiceType=MotorTricycle", 
            id: "vehicle-history", 
            text: "Motor tricycle discount vehicle history", 
            soloButton: true
        )
        
        @FormHelpers.DottedSeparator()
        @ModulesHelpers.BackLink()

        @this.ScriptBlock(
            @<script>
               queue.push(
                    "@Html.ScriptPath("modules/M020-on-this-page.min.js")", null,
