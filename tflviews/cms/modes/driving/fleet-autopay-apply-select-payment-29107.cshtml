            content.ConfirmPaymentMethodText = "I confirm that I am the bank/building society account holder, and/or I have the sole responsibility for authorising debits from this account";
            content.ConfirmPaymentMethodRequireTrue = "Confirm authority to continue";

            
            Html.RenderAction(
                RucDictionary.AutoPayApply.ApplyFleetPaymentActionName,
                "AutoPayApplyFleet",
                new
                {
                    area = "Ruc",
                    backUrl = "/modes/driving/fleet-autopay-apply-supporting-documentation-29117",
                    directDebitUrl = "/modes/driving/fleet-autopay-apply-direct-debit-29063",
                    continueUrl = "/modes/driving/fleet-autopay-apply-success-29112",
                    content = content
                }
            );
        }
        @this.ScriptBlock(
            @<script>
                queue.push(
                    function () {
