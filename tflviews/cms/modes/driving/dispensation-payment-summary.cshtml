        @using TfL.Ruc.Services.ViewModels.Ruc.Dispensation
        @{ 
            dynamic content = new ContentModel();
            content.PayForAnotherVrm = "Do you wish to pay for a PCN issued to another vehicle? ";
            content.EmailReceipt = "Send me a receipt by email";
            content.EmailLabel = "Email address";
            content.ConfirmEmailLabel = "Confirm email address";
            content.PaymentButtonText = "Confirm payment";
            content.PrivacyNoticeInfo = "<p>Read the <a href='/corporate/privacy-and-cookies/road-user-charging' target='_blank'>London Road User Charging privacy notice</a>.</p>";
            content.PaymentWarning = "Selecting 'Confirm payment' will complete the transaction and payment will be taken.";
            content.BackButtonText = "Back";
            content.AmountDueLabel = "Amount due";
            content.FromToLabel = "Dates & times";
            content.LocationLabel = "Location";
            content.NoteLabel = "Note";
            content.RefNoLabel = "Reference number";
            content.StatusLabel = "Status";
            content.VehicleDetailsIncompleteWarning = "The vehicle details must be completed before the dispensation can be paid.";
            content.ViewDetailsButtonText = "View details";
            content.ViewDetailsConfirmButtonText = "View alternative option";
            content.ViewDetailsUpdateButtonText = "Update vehicle details";

            content.ConfirmPrivacyNoticeRequireTrue = "Please confirm you have read and understand the privacy notice.";

            Html.RenderAction(
            "PaymentSummary",
            "Dispensation", new
            {
                area = "Ruc",
                email = Request["email"],
                refNo = Request["refNo"],
                backUrl = "/modes/driving/view-dispensations",
                paymentResultUrl = "/modes/driving/dispensation-payment-result",
                content = content
            }); 
        }
      
  
 
      
        
          
        
      
    
