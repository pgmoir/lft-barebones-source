            content.ChargeDatesPassedErrorMessage = "You cannot amend a charge with a start date earlier than today";
            content.ChargeNotAuthorisedErrorMessage = "";

            content.VrmRequired = "Enter a Vehicle Registration Mark to continue";
            content.ReceiptNumberRequired = "Enter a receipt number to continue";
            content.StartDateRequired = "Enter a start date to continue";
            
            Html.RenderAction(
            "FindCharge",
            "ChangeZoneCharge",
            new
            {
                area = "Ruc",
                resultUrl = "/modes/driving/cc-change-a-charge-change-a-charge-26481",
                backUrl = "/modes/driving/congestion-charge",
                content = content,
                zoneType = ZoneChargeZone.CongestionCharge,
                loginUrl = "/modes/driving/login"
            });
