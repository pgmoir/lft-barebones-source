  <div class="main content-container" role="main">
    
    
      <h2>Payment failed</h2>
      
           
      


		
		<!-- 6. failure -->
		@using TfL.Ruc.Services.ViewModels.Ruc.ZoneCharge.PayZoneCharge
		@{
            dynamic content = new ContentModel();
            content.ErrorTitle = "We were unable to process your payment";
            content.PaymentErrorText = "<p>Your payment has failed.</p>";
            content.PaymentDeclinedText = "<p>Your payment has failed.</p>";
            content.PaymentNextStepInfo = "<p>You have not paid the charge because your payment to us has failed. If you need to pay this charge, use an alternative payment method.<br /><br />If you fail to pay the correct charge, a Penalty Charge Notice will be issued.</p>";
            content.TryAgainButtonText = "Try again";
            content.TryAgainButtonUrl = "/modes/driving/lez-paying-the-low-emission-charge-select-vehicle-26462";
            
            Html.RenderAction("PaymentFailure", "PayZoneCharge", new
                {
                    area = "Ruc", 
                    content = content, 
                    zoneType = ZoneChargeZone.LowEmission
                }
            );
        }
		
	  

  
      
        
          
        
      
    
