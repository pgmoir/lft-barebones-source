            content.RemoveButtonText = "Remove";
            content.CancelButtonText = "Keep";

            Html.RenderAction(
                RucDictionary.AutoPayApply.SelectPaymentCcActionName,
                "AutoPayApply",
                new
                {
                    area = "Ruc",
                    backUrl = "/modes/driving/autopay-apply-summary",
                    directDebitUrl = "/modes/driving/autopay-apply-direct-debit",
                    cardConfirmUrl = "/modes/driving/autopay-apply-card-confirm",
                    addToExistingAutoPayServiceSuccessUrl = "/modes/driving/cc-autopay-manage-success-29161",
                    addToExistingAutoPayServiceFailureUrl = "/modes/driving/cc-autopay-manage-failure-29132",
